@model Projekt2_Group3.Models.login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="homepage">
        <p> Welcome to our website </p>

        <div class="box">
            <div class="username">
                @Html.TextBoxFor(t => t.username, new { placeholder = "username" })
            </div>
            <div class="password">
                @Html.TextBoxFor(t => t.password, new { placeholder = "password", type ="password" })
            </div>
            <div class="checkbox">
                @Html.Label("Sign in as employee", new { style = "color: #18A0FB; font-size: 20px; padding-right:10px; " })
                @Html.CheckBoxFor(t => t.isEmployee)
            </div>
            <div class="Signin">
                <input type="submit" value=" Sign in ">
            </div>
            <div class="no_account">
                <p1> Don't have an account yet?</p1>
            </div>
            <div class="signup_now">
                @Html.ActionLink("Sign up now", "Signup")

            </div>
        </div>

    </div>

}




